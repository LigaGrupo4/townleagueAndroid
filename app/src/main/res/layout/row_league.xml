<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/item_team_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/normal_separation"
    android:clickable="true"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="80"
        android:layout_height="match_parent"
        android:background="@drawable/bcg1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextLeague1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Activity_Row_Nombre"
            android:textSize="40sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/TextLeague2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Activity_Row_Puntos"
            android:textSize="40sp"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"/>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>